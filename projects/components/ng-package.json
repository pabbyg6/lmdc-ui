{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/components",
  "lib": {
    "entryFile": "src/public-api.ts",
    "styleIncludePaths": [
      "./src/core"
    ]
  },
  
  "allowedNonPeerDependencies": [
    "subsink",
    "@angular/cdk"
  ],
  "assets":[
    "./_index.scss",
    "./core/**/*.scss",
    "./src/lib/**/*.scss",
    "./styles/"
  ]
}